{
  "name": "geospatial-incident-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "postinstall": "npm --prefix client install && npm --prefix server install",
    "lint": "eslint . --max-warnings=0",
    "lint:client": "npm --prefix client run lint",
    "lint:server": "npm --prefix server run lint",
    "test": "npm-run-all test:server test:client",
    "test:client": "npm --prefix client run test -- --run",
    "test:server": "npm-run-all --sequential test:server:unit test:server:integration",
    "test:server:unit": "npm --prefix server run test -- --runInBand",
    "test:server:integration": "npm --prefix server run test:db",
    "format": "prettier --check \"**/*.{js,ts,tsx,jsx,json,md,css,scss}\"",
    "format:write": "prettier --write \"**/*.{js,ts,tsx,jsx,json,md,css,scss}\""
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0"
  }
}
